<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrimeiraPágina.Login"
    android:background="@drawable/background"
    >


    <Button
        android:id="@+id/btnPingTest"
        android:layout_width="288dp"
        android:layout_height="100dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="336dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Users Ping Test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAplicação"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnAplicação"
        android:layout_width="287dp"
        android:layout_height="95dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Ver Aplicação"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="228dp"
        android:layout_height="69dp"
        android:layout_marginTop="64dp"
        android:text="@string/whatnow"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="#0077D6"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
